<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <title>Sudoku</title>
        <script type="text/javascript" src="jquery.js"></script>
        <script type="text/javascript">
            function Wiersz(numer, rozmiar)
            {
                var wiersz = "<tr>";
                for(var i = 1; i <= rozmiar; i++) //UWAGA: zmieniliśmy j na i!
                {
                    wiersz += "<td>";
                    wiersz += numer * 10 + i;
                    wiersz += "</td>";
                }
                wiersz += "</tr>";
                return wiersz;
            }

            function Plansza(rozmiar)
            {
                var plansza = "<table border=1>";
                for(var i = 1; i <= rozmiar; i++) {
                    plansza += Wiersz(i, rozmiar)
                }
                plansza += "</table>";
                return plansza;
            }

            $(document).ready(function(){
                $("#plansza").html(Plansza(6));
            })
        </script>
    </head>
    <body>
        <div id='plansza'>Miejsce na planszę</div>
    </body>
</html>
